{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "typeRoots": [      
            "./node-modules/@types/",
            "./src/@types/"
            ],                       
        "types": ["jest", "node", "@types/jest"],                          
        "esModuleInterop": true,                  
        "skipLibCheck": true,                    
        "forceConsistentCasingInFileNames": true 
        
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
